<?xml version="1.0" encoding="UTF-8"?>

<!-- 
AI DECLARATION: 
There was substantial usage of AI to help structure the UI due to the
scene builder not working with VS Code as intended and leading to constant 
compilation errors or incomplete layouts
-->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            styleClass="education-screen">
    
    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" bottom="10" />
            </padding>

            <!-- Title and Page Number -->
            <Label fx:id="titleLabel" text="Nutrition Education" styleClass="edu-title" />
            <Label fx:id="pageNumberLabel" text="Page 1 of 5" style="-fx-font-size: 16px; -fx-font-style: italic;" />
            
            <HBox alignment="CENTER_RIGHT">
                <padding>
                    <Insets right="20" />
                </padding>
                
                <Button fx:id="skipButton" text="Skip to Game" styleClass="warning-button" />
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets top="10" right="40" bottom="20" left="40" />
            </padding>
            
            <ScrollPane fitToWidth="true" styleClass="content-pane">
                <VBox fx:id="contentContainer" spacing="15" styleClass="edu-content-container">
                    <!-- SECTION FOR EDUCATIONAL CONTEXT -->
                </VBox>
            </ScrollPane>
            
            <!-- Character and food containers -->
            <HBox fx:id="characterContainer" spacing="20" alignment="CENTER" styleClass="character-container" />
            <HBox fx:id="foodContainer" spacing="20" alignment="CENTER" styleClass="food-container" />
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="30" styleClass="edu-footer">
            <padding>
                <Insets top="15" right="30" bottom="15" left="30" />
            </padding>

            <!-- Navigation Buttons -->
            <Button fx:id="backToMenuButton" text="Back to Menu" styleClass="button" />
            <Button fx:id="previousButton" text="Previous" styleClass="primary-button" />
            <Button fx:id="nextButton" text="Next" styleClass="start-game-button" />
        </HBox>
    </bottom>
</BorderPane>